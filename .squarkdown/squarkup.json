{
  "$schema": "../.stranger-quarkdown/squarkdown/resources/squarkup-schema.json",
  
  "repo": "Assort",

  "site": ".site",
  "sources": [
  ],
  "exclude": [
    "\\.archive",
    "\\.assets",
    "\\.github",
    "\\.site",
    "stranger-quarkdown",
    "Antarctica",
    "Victory",
    "~code",
    "~graphics"
  ],
  "dest": "src/routes/(article)/(rendered)",
  "if-no-dir": ["warn", "create"],
  "on-error": "kill",
  
  "file-name": "~content",
  "bases": "src/parts/base",
  "page.svelte": "~page.svelte",
  "index.svelte": "~index.svelte",
  "page.js": "~page.js",
  "index-view": "#parts/views/view.index.svelte",

  "site-data": "src/data/site.json",
  "styles": "src/styles",
  "page-styles": "src/styles/pages",
  "assets": ".assets",
  "site-assets": ".assets/.site",
  "fonts": [
    "Fira+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700",
    "Fira+Mono:wght@400;500;700",
    "Nanum+Pen+Script",
    "Noto+Serif:ital,wght@0,100..900;1,100..900",
    "Outfit:wght@100..900",
    "Shantell+Sans:ital,wght,INFM@0,300..800,0..100;1,300..800,0..100"
  ]
}
