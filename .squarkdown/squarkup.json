{
  "$schema": "../.stranger-quarkdown/squarkdown/resources/squarkup-schema.json",
  
  "repo": "Assort",

  "site": ".site",
  "sources": [
    ".squarkdown/content",
    "Yu-Gi-Oh!",
    "~poetry",
    "~writing"
  ],
  "exclude": [
  ],
  "dest": ".site/src/routes/(article)",
  "file-name": "~content",
  "base-page": "src/parts/base/~page.svelte",
  "base-index": "src/parts/base/~index.svelte",

  "styles": "src/styles",
  "page-styles": "src/styles/pages",
  "assets": ".assets",
  "site-assets": ".assets/.site",
  "fonts": [
    "Outfit:wght@100..900",
    "Nanum+Pen+Script",
    "Shantell+Sans:ital,wght,BNCE@0,300..800,-100..100;1,300..800,-100..100",
    "Fira+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700"
  ],

  "if-no-dir": ["warn", "create"]
}
