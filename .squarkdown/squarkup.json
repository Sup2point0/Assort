{
  "$schema": "../.stranger-quarkdown/squarkdown/resources/repo-config-schema.json",
  
  "repo": "Assort",

  "site": ".site",
  "sources": [
    ".squarkdown/content",
    "~poetry/"
  ],
  "dest": ".site/src/routes/(article)",

  "file-source": "src/parts/page/~page.svelte",
  "file-name": "~content",

  "styles": "src/styles",
  "page-styles": "src/styles/pages",
  "assets": ".assets",
  "site-assets": ".assets/.site",
  "exclude": [
  ],
  "fonts": [
    "Outfit:wght@100..900",
    "Nanum+Pen+Script",
    "Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900"
  ],

  "if-no-dir": "warn"
}
