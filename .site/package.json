{
	"name": "site",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
      "devx": "npm run prep && npm run dev",
    "prep": "npm run squark",
      "prepx": "npm run squarkx && npm run vivid",
      "squark": "cd ../.stranger-quarkdown && rake squark[fonts,scss] && cd ../.site",
        "squarkx": "cd ../.stranger-quarkdown && rake squark[fonts,assets,scss] && cd ../.site",
      "vivid": "python vividity/export --root=src/palettes --css=colours.css css js",
		"build": "vite build",
      "buildx": "npm run prepx && npm run build",
		"preview": "vite preview"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.2",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"mdsvex": "^0.11.2",
		"sass": "^1.77.6",
		"svelte": "^4.2.7",
		"svelte-persisted-store": "^0.11.0",
		"svelte-preprocess": "^6.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
	},
	"type": "module"
}
